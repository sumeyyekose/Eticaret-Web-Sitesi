@model IEnumerable<proje1.Entity.Order>

<li class="nav-item dropdown">
    <a class="nav-link" data-toggle="dropdown" href="#">
        <i class="far fa-bell"></i>
        <span class="badge badge-warning navbar-badge">@Model.Count()</span>
    </a>
    <div class="dropdown-menu dropdown-menu-lg dropdown-menu-right">
        <span class="dropdown-item dropdown-header"><strong>Bildirimler</strong>(Beklenen Siparişler)</span>

        


            @foreach (var item in Model)
            {
                <div class="dropdown-divider"></div>
                <a href="/Order/Details/@item.Id" class="dropdown-item">
                    <i class="fas fa-envelope mr-2"></i>
                    <strong>@item.UserName :</strong> Kullanıcısı ürün bekliyor.
                    
                </a>
            }

    <div class="footer">
        @if (Model.Count()>0)
        {
            <p>Bildirimleriniz</p>
        }
        else
        {
        <span>Bildirim Yok.</span>
            
        }

    </div>
        





    </div>
</li>
