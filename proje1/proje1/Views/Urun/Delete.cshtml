@model proje1.Entity.Urun

@{
    ViewBag.Title = "Delete";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<h2>Sil</h2>

<h3>Ürünü silmek istediğinize emin misiniz?</h3>
<div>

    <dl class="dl-horizontal">


        <dt>
            Adı:
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Adi)
        </dd>

        <dt>
            Açıklama:
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Aciklama)
        </dd>

        <dt>
            Fiyat:
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Fiyat)
        </dd>

        <dt>
            Adet:
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Stok)
        </dd>

        <dt>
            Resim:
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Resim)
            <img src="~/Content/İmages/@Model.Resim" height="75" width="50"/>
        </dd>

        <dt>
            Slider:
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Slider)
        </dd>

        <dt>
            Anasayfa:
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Homdami)
        </dd>

        <dt>
            Onaylı:
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Onaylimi)
        </dd>

        <dt>
            Popüler:
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Onecikanmi)
        </dd>

    </dl>

    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()

<div class="form-group">
    <div class="col-md-offset-2 col-md-10">
        <input type="submit" value="Sil" class="btn btn-danger" />
        @Html.ActionLink("Ürün Listesi", "Index", null, new { @class = "btn btn-warning" })
    </div>
</div>
    }
</div>
