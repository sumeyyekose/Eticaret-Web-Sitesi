@model IEnumerable<proje1.Entity.Urun>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="container-fluid">
    <div class="row">
        <div class="col-12">

            <!-- /.card -->

            <div class="card">

                <!-- /.card-header -->
                <div class="card-body">
                    <a class="btn btn-primary ptn-block" href="@Url.Action("Create")">Yeni Kayıt</a>
                    <table id="example1" class="table table-bordered table-striped">
                        <thead>
                            <tr>
                                <th>Resim</th>

                                <th>Ürün Adı</th>
                                <th>Onaylı</th>
                                <th>Anasayfa</th>
                                <th>Popüler</th>
                                <th>Kategori Adı</th>
                                <th></th>
                            </tr>
                        </thead>
                        <tbody>

                            @foreach (var item in Model)
                            {
                            <tr>
                                <td>
                                    <img src="~/Content/İmages/@item.Resim" width="75" height="50" />
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.Adi)
                                </td>
                                <td>
                                    @if (item.Onaylimi)

                                    {
                                        <label class="label label-success"><i class="fa fa-fw fa-check-square"></i>Evet</label>

                                    }
                                    else
                                    {
                                        <label class="label label-danger"><i class="fa fa-fw fa-times-circle"></i>Hayır</label>

                                    }
                                </td>

                                <td>
                                    @if (item.Homdami)

                                    {
                                        <label class="label label-success"><i class="fa fa-fw fa-check-square"></i>Evet</label>

                                    }
                                    else
                                    {
                                        <label class="label label-danger"><i class="fa fa-fw fa-times-circle"></i>Hayır</label>

                                    }
                                </td>
                                <td>
                                    @if (item.Onecikanmi)

                                    {
                                        <label class="label label-success"><i class="fa fa-fw fa-check-square"></i>Evet</label>

                                    }
                                    else
                                    {
                                        <label class="label label-danger"><i class="fa fa-fw fa-times-circle"></i>Hayır</label>

                                    }
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.Kategori.Adi)
                                </td>



                                <td>
                                    <a class="btn btn-primary ptn-sm" href="@Url.Action("Edit",new { id = item.Id })"><i class="fa fa-fw fa-edit"></i>Düzenle</a>
                                    <a class="btn btn-danger ptn-sm" href="@Url.Action("Delete",new { id = item.Id })"><i class="fa fa-fw fa-trash"></i>Sil</a>
                                </td>
                            </tr>
                            }

                        <tfoot>
                            <tr>
                                <th>Resim</th>

                                <th>Ürün Adı</th>
                                <th>Onaylı</th>
                                <th>Anasayfa</th>
                                <th>Popüler</th>
                                <th>Kategori Adı</th>
                                <th></th>
                            </tr>
                        </tfoot>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>



